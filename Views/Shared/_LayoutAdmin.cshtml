<!DOCTYPE html>
<html lang="en">
@{
    Layout = "_Layout.cshtml";
    var user = Context.Session.GetString("user");
    if(user != "Admin FU")
    {
        Context.Response.Redirect("/Home/Login");
    }
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sidebar Navigation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <style>
        /* Sidebar styling */
        .body {
            background-color: bisque;
        }

        .sidebar {
            background-color: aqua;
            padding-top: 20px;
            height: 100vh; /* Adjust for the navbar height */
            overflow-y: auto;
           
        }
        /* Main content */
        .main-content {
            padding: 20px;
        }
        /* Sidebar link styles */
        .sidebar a {
            padding: 10px;
            font-size: 18px;
            display: block;
            color: #333;
            text-decoration: none;
        }

            .sidebar a:hover {
                background-color: #ddd;
                color: #000;
            }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row" style="margin-left: -123px; margin-top: -40px">
            <nav class="col-md-3 col-lg-2 sidebar mt-3">
                <ul class="nav flex-column item-sidebar">
                    <li class="nav-item">
                        <a class="nav-link" href="./Home">
                            <i class="fa-solid fa-house" style="color: #74C0FC;"></i>&nbsp;&nbsp;Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./ManageAccount">
                            <i class="fa-solid fa-user" style="color: #74C0FC;"></i>&nbsp;&nbsp;Manage Account
                        </a>
                    </li>
                </ul>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

<script>
    const navLinks = document.querySelectorAll(".nav-link");
    const currentPath = window.location.pathname.split("/").pop(); // Get current page (e.g., Home, ManageAccount)

    navLinks.forEach(link => {
        const linkPath = link.getAttribute("href").replace("./", "");

        // Set active if URL matches
        if (currentPath === linkPath) {
            link.classList.add("active");
        }

        // Add click event to handle active class dynamically
        link.addEventListener("click", function () {
            navLinks.forEach(nav => nav.classList.remove("active")); // Remove active from all
            this.classList.add("active"); // Add active to clicked link
        });
    });


</script>
</html>
