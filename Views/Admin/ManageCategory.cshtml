@model IEnumerable<NMS.Models.Category>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Manage Category";
}


<h2>Manage Category</h2>
<a href="@Url.Action("Create", "Categories")" class="btn btn-sm btn-success">Add</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Category Description</th>
            <th>Status Active</th>
            <th>Actions</th>
    </thead>
    <tbody>
        @foreach (var cate in Model)
        {
            <tr>
                <td>@cate.CategoryId</td>
                <td>@cate.CategoryName</td>
                <td>@cate.CategoryDescription</td>
                <td>@(cate.IsActive ? "Active" : "Inactive")</td>
                <td>
                    <a href="@Url.Action("Details", "Categories", new { id = cate.CategoryId })" class="btn btn-sm btn-success">Detail</a>
                    <a href="@Url.Action("Edit", "Categories", new { id = cate.CategoryId })" class="btn btn-sm btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Categories", new { id = cate.CategoryId })" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this account?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>