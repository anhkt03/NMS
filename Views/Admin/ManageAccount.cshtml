@model IEnumerable<NMS.Models.SystemAccount>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Manage Account";
}

    

<h2>Manage Account</h2>
<a href="@Url.Action("Create", "SystemAccounts")" class="btn btn-sm btn-success">Add</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Account ID</th>
            <th>Email</th>
            <th>Name</th>
            <th>Password</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model)
        {
            <tr>
                <td>@account.AccountId</td>
                <td>@account.AccountEmail</td>
                <td>@account.AccountName</td>
                <td>@account.AccountPassword</td>
                <td>@(account.AccountRole == 1 ? "Staff" : account.AccountRole == 2 ? "Lecturer" : "Unknown")</td>
                <td>
                    <a href="@Url.Action("Edit", "SystemAccounts", new { id = account.AccountId })" class="btn btn-sm btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "SystemAccounts", new { id = account.AccountId })" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this account?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
